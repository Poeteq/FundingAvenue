<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Legal Business Name <small>*</small></label>
    <div class="col-sm-8">
        <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="" ng-model="applyInfo.businessName">
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Type of Business <small>*</small></label>
    <div class="col-sm-8">
        <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="I.E Automotive, restaurant, investment" ng-model="applyInfo.businessType">
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Type of Entity <small>*</small></label>
    <div class="col-sm-8">
        <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="I.E. S-Corp, LLC" ng-model="applyInfo.businessEntityType">
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Date Incorporated<small>*</small></label>
    <div class="col-sm-8">
        <input type="text" id="datepicker" class="form-control tleft" placeholder="MM/DD/YYYY" ng-model="applyInfo.businessIncorpDate" fa-datepicker>
    </div>
</div>

<hr>

<div class="form-group">
    <label for="template-contactform-name">Any <br />Business Credit Cards?</label>
    <i class="icon-line-square-plus" style="font-size:18px;" ng-click="addCreditCard()"></i>
    <i class="icon-line-square-minus" style="font-size:18px;" ng-click="deleteCreditCard()"></i>
    <div class="row" ng-repeat="creditCard in applyInfo.businessCreditCards">

        <div class="col-sm-4 form-group">
            <label for="template-contactform-name">Bank/Lender</label>
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="" ng-model="creditCard.lender">
        </div>
        <div class="col-sm-4">
            <label for="template-contactform-name">Balance</label>
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="" ng-model="creditCard.balance">
        </div>
        <div class="col-sm-4">
            <label for="template-contactform-name">Limit</label>
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="" ng-model="creditCard.limit">
        </div>

    </div>
</div>

<hr>

<div class="form-group">
    <label for="template-contactform-name">Other <br />Lines of Credit? <small></small></label>
    <i class="icon-line-square-plus" style="font-size:18px;" ng-click="addLineOfCredit()"></i>
    <i class="icon-line-square-minus" style="font-size:18px;" ng-click="deleteLineOfCredit()"></i>
    <div class="row" ng-repeat="creditLine in applyInfo.businessCreditLines">
        <div class="col-sm-3">
            <select id="template-contactform-service" name="template-contactform-service" class="sm-form-control" ng-model="creditLine.isSecured">
                <option ng-value="" disabled>-- Select One --</option>
                <option ng-value="true">Secured</option>
                <option ng-value="false">Unsecured</option>
            </select>
        </div>
        <div class="col-sm-3">
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="Bank/Lender" ng-model="creditLine.lender">
        </div>
        <div class="col-sm-3">
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="Balance" ng-model="creditLine.balance">
        </div>
        <div class="col-sm-3">
            <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="Limit" ng-model="creditLine.limit">
        </div>
    </div>
</div>


<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">How Much Business Capital Do You Seek? <small>*</small></label>
    <div class="col-sm-8">
        <input type="text" class="sm-form-control required" id="template-contactform-name" placeholder="Max Limit" 
               ng-model="applyInfo.amountRequested" ng-focus="applyInfo.amountRequested == 0 ? applyInfo.amountRequested = '' : ''" fa-currency-mask required>
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Have You Ever Filed For Bankruptcy? <small>*</small></label>
    <div class="col-sm-8">
        <select id="template-contactform-service" name="template-contactform-service" class="sm-form-control" ng-model="applyInfo.hasFiledForBankruptcy">
            <option ng-value="" disabled>-- Select One --</option>
            <option ng-value="false">No</option>
            <option ng-value="true">Yes</option>
        </select>
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Have You Ever Been In Foreclosure? <small>*</small></label>
    <div class="col-sm-8">
        <select id="template-contactform-service" name="template-contactform-service" class="sm-form-control" ng-model="applyInfo.hasBeenInForeclosure">
            <option ng-value="" disabled>-- Select One --</option>
            <option ng-value="false">No</option>
            <option ng-value="true">Yes</option>
        </select>
    </div>
</div>

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Any Judgements, Collections or Liens on your Credit Report? <small>*</small></label>
    <div class="col-sm-8">
        <select id="template-contactform-service" name="template-contactform-service" class="sm-form-control" ng-model="applyInfo.hasJudgementsCollectionsLiens">
            <option ng-value="" disabled>-- Select One --</option>
            <option ng-value="false">No</option>
            <option ng-value="true">Yes</option>
        </select>
    </div>
</div>
